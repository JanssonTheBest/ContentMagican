@model TasksViewModel

<div class="container mt-4">
    <div class="text-center mb-4">
        <strong class="h2">Tasks</strong>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("CreateTask", "Tasks")" class="btn btn-primary">
            Create Task
        </a>
    </div>

    <div class="card shadow-sm p-3 mb-5 bg-body rounded">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0" id="table" data-toggle="table" data-height="460">
                <thead class="table-light">
                    <tr>
                        <th scope="col" data-field="name">Task</th>
                        <th scope="col" data-field="type">Type</th>
                        <th scope="col" data-field="status">Status</th>
                        <th scope="col" data-field="created">Created</th>
                        <th scope="col" data-field="id">Id</th>
                        <th scope="col" data-field="actions">Actions</th>
                    </tr>
                </thead>
                <tbody style="background-color:white">
                    @for (var i = 0; i < Model.Tasks.Count; i++)
                    {
                        <tr>
                            <td>@Model.Tasks[i].Description</td>
                            <td>@Model.Tasks[i].Type</td>
                            <td>@Model.Tasks[i].Status</td>
                            <td>@Model.Tasks[i].Created.ToString("yyyy-MM-dd")</td>
                            <td>@Model.Tasks[i].Id</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="actionDropdown">
                                        <a class="dropdown-item" href="@Url.Action("EditTasks","Tasks", new { taskId = Model.Tasks[i].Id })">Edit</a>
                                        <a class="dropdown-item" href="#">View Details</a>
                                        <a class="dropdown-item text-danger" href="@Url.Action("DeleteTasks", "Tasks", new { taskId = Model.Tasks[i].Id })">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<style>
    /* Add consistent border styles */
    #table thead th {
        border-bottom: 2px solid #ddd !important;
    }

    #table tbody tr td {
        border-top: 1px solid #f0f0f0 !important;
    }
    /* Table padding for a cleaner look */
    .table td, .table th {
        padding: 1rem;
        vertical-align: middle;
    }
</style>
