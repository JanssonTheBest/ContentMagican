@using ContentMagican.Services
@model TasksViewModel
@inject TaskService taskService

<div class="container mt-4">
    <!-- Banner Section -->
    <div class="alert alert-info text-center mb-4" role="alert">
        <strong>You have @(Convert.ToString(await taskService.AvailableContentCreations(Context))) unused content creation available!</strong>
    </div>

    <div class="text-center mb-4">
        <strong class="h2">Tasks</strong>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a href="@Url.Action("CreateTask", "Tasks")" class="btn btn-primary">
            Create Task
        </a>
    </div>

    <!-- Added 'border' class to the container div -->
    <div class="p-3 mb-5 border rounded">
        <!-- Set overflow to visible for dropdowns -->
        <div class="table-responsive" style="overflow: visible !important;">
            <!-- Updated table classes -->
            <table class="table mb-0" id="table" data-toggle="table" data-height="460">
                <thead class="table-light">
                    <tr>
                        <th scope="col" data-field="name">Task</th>
                        <th scope="col" data-field="type">Type</th>
                        <th scope="col" data-field="status">Status</th>
                        <th scope="col" data-field="created">Created</th>
                        <th scope="col" data-field="id">Id</th>
                        <th scope="col" data-field="account">Account</th> <!-- New Account Column -->
                        <th scope="col" data-field="actions">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Tasks.Count; i++)
                    {
                        <tr>
                            <td>@Model.Tasks[i].Description</td>
                            <td>@(((TaskService.TaskSubTypes)Model.Tasks[i].Subtype).ToString().Replace('_', ' '))</td>
                            <td>@(((TaskService.TaskStatus)Model.Tasks[i].Status).ToString().Replace('_', ' '))</td>
                            <td>@Model.Tasks[i].Created.ToString("yyyy-MM-dd")</td>
                            <td>@Model.Tasks[i].Id</td>
                            <td>
                                <div class="rounded-card d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <img src="@Model.Tasks[i].AdditionalInfo.Split(',')[1]" alt="Icon" class="icon-size me-3" />
                                        <span>@Model.Tasks[i].AdditionalInfo.Split(',')[0]</span>
                                    </div>
                                    @if (Model.Tasks[i].AdditionalInfo.Split(',')[2].Trim().ToLower() == "tiktok")
                                    {
                                        <img src="/Resources/tiktok.png" alt="TikTok Icon" style="width: 24px; height: 24px;" />
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="dropdown" style="position: relative;">
                                    <button class="btn btn-secondary dropdown-toggle btn-sm" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="actionDropdown" style="z-index: 1050;">
                                        <a class="dropdown-item" href="#">View Details</a>
                                        <a class="dropdown-item text-danger" href="@Url.Action("DeleteTasks", "Tasks", new { taskId = Model.Tasks[i].Id })">Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
