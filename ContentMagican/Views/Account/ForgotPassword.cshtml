@model ForgotPasswordViewModel
<style>
    body {
        background-image: url('https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExeWlyZnFkNWFoMWVjOHNma28zcGdibmozdHRoNDc0a215OGt1NTY3byZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/X62BvTrE4Hzjz4rHaB/giphy.webp'); /* Replace with your image path */
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    /* Optional: Make the card background semi-transparent for readability */
    .card {
        background-color: rgba(255, 255, 255, 0.9);
    }

    /* Add styles for the header text */
    .header-text {
        color: white;
        text-align: center;
        margin-bottom: 30px;
        font-size: 4em; /* Adjust as needed */
        text-shadow: 2px 2px black;
    }

    /* Additional styles specific to Forgot Password page */
    .form-header {
        color: #333;
    }
</style>

<div class="container mt-1">
    <!-- Header -->
    <h1 class="header-text">Need a Reset?</h1>

    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card p-4 shadow-sm">
                <div class="text-center mb-4">
                    <h3 class="form-header">Forgot Your Password?</h3>
                    <p class="text-muted">Enter your email address below and we'll send you a link to reset your password.</p>
                </div>

                <form method="post" action="@Url.Action("ForgotPassword", "Account")">
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your registered email" required>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-block">Send Reset Link</button>
                    </div>

                    @if (Model.Message != null)
                    {
                        <div class="alert alert-info text-center" role="alert">
                            @Model.Message
                        </div>
                    }

                    @if (Model.Error != null)
                    {
                        <div class="alert alert-danger text-center" role="alert">
                            @Model.Error
                        </div>
                    }

                    <div class="text-center mb-3">
                        <a href="@Url.Action("LoginAccount","Account")" class="text-muted">Back to Login</a>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">Don't have an account? <a href="@Url.Action("Register", "Account")">Sign up</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
