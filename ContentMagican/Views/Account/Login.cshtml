@model LoginViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card p-4 shadow-sm">
                <div class="text-center mb-4">
                    <h3>Login to ConjureContent</h3>
                    <p class="text-muted">Access your account to continue</p>
                </div>

                <form method="post" action="@Url.Action("LoginAccount","Account")">
                    <div class="form-group mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
                    </div>

                    <div class="form-group mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </div>

                    <div class="text-center mb-3">
                        <a href="/forgot-password" class="text-muted">Forgot password?</a>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">Don't have an account? <a href="@Url.Action("Register", "Account")">Sign up</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Feature Cards Section -->
<div class="container mt-5">
    <div class="row">
        <!-- First Feature Card -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-lightning-charge-fill" style="font-size: 2.5rem; color: #007bff;"></i>
                    <h5 class="card-title mt-3">Automate Content Creation</h5>
                    <p class="card-text">Effortlessly generate engaging content for all your social media platforms.</p>
                </div>
            </div>
        </div>
        <!-- Second Feature Card -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-calendar-check-fill" style="font-size: 2.5rem; color: #007bff;"></i>
                    <h5 class="card-title mt-3">Schedule Posts</h5>
                    <p class="card-text">Plan and schedule your posts ahead of time to maintain consistent engagement.</p>
                </div>
            </div>
        </div>
        <!-- Third Feature Card -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-bar-chart-fill" style="font-size: 2.5rem; color: #007bff;"></i>
                    <h5 class="card-title mt-3">Analyze Performance</h5>
                    <p class="card-text">Track and analyze the performance of your content with our analytics tools.</p>
                </div>
            </div>
        </div>
    </div>
</div>
