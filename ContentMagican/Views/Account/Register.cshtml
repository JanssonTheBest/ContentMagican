@model RegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register for ConjureContent</title>
    <style>
        body {
            background-image: url('https://media4.giphy.com/media/v1.Y2lkPTc5MGI3NjExeWlyZnFkNWFoMWVjOHNma28zcGdibmozdHRoNDc0a215OGt1NTY3byZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/X62BvTrE4Hzjz4rHaB/giphy.webp'); /* Replace with your image path */
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            font-family: Arial, sans-serif;
        }

        /* Make the card background semi-transparent for readability */
        .card {
            background-color: rgba(255, 255, 255, 0.9);
        }

        /* Styles for the header text */
        .header-text {
            color: white;
            text-align: center;
            margin-bottom: 30px;
            font-size: 4em; /* Adjust as needed */
            text-shadow: 2px 2px black;
        }

        /* Additional styling for links */
        .form-check-label a {
            color: #0d6efd;
            text-decoration: none;
        }

        .form-check-label a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container mt-1">
        <!-- Header -->
        <h1 class="header-text">Let the magic begin</h1>

        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card p-4 shadow-sm">
                    <div class="text-center mb-4">
                        <h3>Register for ConjureContent</h3>
                        <p class="text-muted">Create your account to get started</p>
                    </div>

                    <form method="post" action="@Url.Action("RegisterAccount","Account")">
                        <!-- Username Input -->
                        <div class="form-group mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Enter username" required>
                        </div>

                        <!-- Email Input -->
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
                        </div>

                        <!-- Password Input -->
                        <div class="form-group mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                        </div>

                        <!-- Confirm Password Input -->
                        <div class="form-group mb-4">
                            <label for="confirm-password" class="form-label">Confirm Password</label>
                            <input type="password" class="form-control" id="confirm-password" name="confirmPassword" placeholder="Confirm password" required>
                        </div>

                        <!-- Terms of Service and Privacy Policy Checkbox -->
                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="acceptTerms">
                                <label class="form-check-label" for="acceptTerms">
                                    I accept the <a href="@Url.Action("Terms","Info")" target="_blank">Terms of Service</a> and <a href="@Url.Action("Privacy","Info")" target="_blank">Privacy Policy</a>
                                </label>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-block" id="registerButton" disabled>Register</button>
                        </div>

                        <div class="text-center">
                            <p class="mb-0" style="color:red">@Model.Error</p>
                        </div>

                        <!-- Login Link -->
                        <div class="text-center">
                            <p class="mb-0">Already have an account? <a href="/login">Login</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript to handle the checkbox and button state -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const acceptTermsCheckbox = document.getElementById('acceptTerms');
            const registerButton = document.getElementById('registerButton');

            // Function to toggle the disabled state of the register button
            function toggleRegisterButton() {
                registerButton.disabled = !acceptTermsCheckbox.checked;
            }

            // Initialize the button state on page load
            toggleRegisterButton();

            // Add event listener to the checkbox
            acceptTermsCheckbox.addEventListener('change', toggleRegisterButton);
        });
    </script>
</body>
</html>
