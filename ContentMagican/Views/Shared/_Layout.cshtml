@using ContentMagican.Services;
@using ContentMagican.Database;
@inject UserService userService;
@inject StripeService stripeService;

@{
    var isAuthenticated = false;
    var token = string.Empty;
    User user = null;
    if (Context.Request.Cookies.TryGetValue("jwtToken", out token))
    {
        if (userService.ValidateJwtToken(token, out _))
        {
            isAuthenticated = true;
            user = await userService.RetrieveUserInformation(Context);
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConjureContent</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContentMagican.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/favicon1.ico">

    <style>
        .dropdown-toggle::after {
            display: none;
        }

        .sidebar {
            width: 150px;
            min-width: 150px;
            height: calc(100vh - 70px);
            position: fixed;
            top: 70px;
            left: 0;
            z-index: 1050;
            background: rgba(248, 249, 250);
            padding: 0;
            display: flex;
            flex-direction: column;
        }

        .sidebar .nav-link {
            border-radius: 0;
            text-decoration: none;
            color: #333;
        }

        .top-navbar {
            height: 70px;
            display: flex;
            align-items: center;
            padding: 0 20px;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 2000;
            background: rgba(255, 255, 255);
            border-bottom: 1px solid #ccc;
        }

        .main-container {
            margin-left: 150px;
            padding: 20px;
            margin-top: 70px;
            position: relative;
            z-index: 1;
        }

        @@media (max-width: 800px) {
            .sidebar-toggler {
                display: block;
                position: absolute;
                left: 20px;
                top: 15px;
                z-index: 2001;
            }

            .sidebar {
                position: fixed;
                top: 70px;
                left: -150px;
                transition: left 0.3s ease;
                z-index: 1050;
            }

            .sidebar.show {
                left: 0;
            }

            .main-container {
                margin-left: 0;
                width: 100%;
            }

            .top-navbar .navbar-logo {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
            }

            .top-navbar .ms-auto {
                position: absolute;
                right: 20px;
                top: 15px;
                margin-left: 0;
            }
        }

        .footer {
            background: rgba(33, 37, 41);
            color: white;
            padding: 10px 0;
            width: 100%;
            z-index: 2000;
            position: relative;
        }
    </style>
</head>
<body>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const sidebarToggler = document.getElementById('sidebarToggler');
            const sidebar = document.querySelector('.sidebar');

            if (sidebarToggler && sidebar) {
                sidebarToggler.addEventListener('click', () => {
                    sidebar.classList.toggle('show');
                });
            }
        });
    </script>

    <!-- Top Navbar -->
    <div class="top-navbar">
        @if (isAuthenticated)
        {
            <!-- Sidebar Toggler for Mobile -->
            <button id="sidebarToggler" class="btn btn-transparent sidebar-toggler d-md-none">
                <img src="/Resources/menu.png" alt="Menu Icon" style="width: 40px; height: 40px;" />
            </button>
        }

        <!-- Logo -->
        <div class="navbar-logo d-flex align-items-center">
            <img src="/Resources/ConjureContent.png" alt="ContentMagican Logo" style="height: 100px;" />
        </div>

        <!-- Right side: User Info -->
        @if (isAuthenticated)
        {
            <div class="d-flex align-items-center justify-content-end ms-auto">
                <!-- Notification Bell -->
                <div class="dropdown me-3">
                    <button class="btn btn-transparent dropdown-toggle p-0" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="border: none; background: none;">
                        <img src="/Resources/bell.png" alt="Notifications" style="width: 24px; height: 24px;" />
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown" style="max-height: 300px; overflow-y: auto; width: 300px; z-index: 1050;">
                        <li class="dropdown-item text-muted">No new messages</li>
                    </ul>
                </div>

                <!-- Subscription Badge -->
                <span class="badge bg-primary me-3">@((await stripeService.GetRelevantProductFromUser(Context)).Name)</span>

                <!-- Profile Dropdown -->
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" id="accountDropdown" data-bs-toggle="dropdown" aria-expanded="false" style="width: 40px; height: 40px; border-radius: 50%; background-image: url('/Resources/profile.png'); background-size: cover; background-position: center; border: none;"></button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown" style="z-index: 1050;">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Account</a></li>
                        <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    @if (isAuthenticated)
    {
        <div class="sidebar d-md-flex flex-column flex-shrink-0">
            <ul class="nav nav-pills flex-column mb-auto">
                <li>
                    <a asp-controller="Plan" asp-action="Main" class="nav-link page-link">
                        <img src="/Resources/plan.png" alt="Plan Icon" class="me-2" style="width: 20px; height: 20px;" />
                        Plan
                    </a>
                </li>
                <li>
                    <a asp-controller="Dashboard" asp-action="Main" class="nav-link page-link">
                        <img src="/Resources/dashboard.png" alt="Dashboard Icon" class="me-2" style="width: 20px; height: 20px;" />
                        Dashboard
                    </a>
                </li>
                <li>
                    <a asp-controller="Tasks" asp-action="Main" class="nav-link page-link">
                        <img src="/Resources/task.png" alt="Tasks Icon" class="me-2" style="width: 20px; height: 20px;" />
                        Tasks
                    </a>
                </li>
                <li>
                    <a asp-controller="Settings" asp-action="Main" class="nav-link page-link">
                        <img src="/Resources/settings.png" alt="Settings Icon" class="me-2" style="width: 20px; height: 20px;" />
                        Settings
                    </a>
                </li>
            </ul>
        </div>
    }

    <!-- Main Content -->
    <div class="main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                    <p class="mb-0">&copy; 2024 ConjureContent.com. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <a href="@Url.Action("Privacy", "Info")" class="text-white me-2">Privacy Policy</a>
                    <span class="text-white">|</span>
                    <a href="@Url.Action("Terms", "Info")" class="text-white ms-2">Terms of Service</a>
                </div>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
